{
  "name": "nodebooster-hardhat",
  "version": "1.0.0",
  "description": "NodeBooster Smart Contracts for Avalanche C-Chain",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test",
    "deploy": "env $(cat .env) npx hardhat run",
    "compile": "npx hardhat compile",
    "clean": "npx hardhat clean",
    "deploy:fuji": "npx hardhat run scripts/deploy-avalanche.js --network fuji",
    "deploy:avalanche": "npx hardhat run scripts/deploy-avalanche.js --network avalanche",
    "verify:fuji": "npx hardhat verify --network fuji",
    "verify:avalanche": "npx hardhat verify --network avalanche"
  },
  "author": "NodeBooster Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.9",
    "@openzeppelin/hardhat-upgrades": "^3.2.0",
    "dotenv": "^16.6.1",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.9"
  }
}
